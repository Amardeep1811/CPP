#include <iostream>
using namespace std;

class Swapper {
private:
    int num1;
    int num2;

public:
    void Numbers() {
        cout << "Enter first number: ";
        cin >> num1;
        cout << "Enter second number: ";
        cin >> num2;
    }

    void swap() {
        int temp = num1;
        num1 = num2;
        num2 = temp;
    }

    void display() {
        cout << "Numbers after swapping: ";
        cout << "First number: " << num1 << ", Second number: " << num2 << endl;
    }
};

int main() {
    Swapper amar;

    amar.Numbers();

    amar.swap();

    amar.display();

    return 0;
}
