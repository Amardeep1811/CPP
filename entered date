#include <iostream>
using namespace std;

class Date {
private:
    int day;
    int month;
    int year;

public:
void inputDate() {
        cout << "Enter day: ";
        cin >> day;
        cout << "Enter month: ";
        cin >> month;
        cout << "Enter year: ";
        cin >> year;
    }

void displayDate() {
        cout << "Entered date: " << day << "/" << month << "/" << year << endl;
    }
};

int main() {
    Date date;

    date.inputDate();


    date.displayDate();

    return 0;
}
