#include <iostream>
#include <cmath>
using namespace std;

class Shape {
public:
    virtual double calculate_area() = 0; // Make it pure virtual for an abstract base class.
};

class Rectangle : public Shape {
protected:
    double width;
    double height;

public:
    Rectangle() : width(0), height(0) {}

    void input() {
        cout << "ENTER THE WIDTH: ";
        cin >> width;

        cout << "ENTER THE HEIGHT: ";
        cin >> height;
    }

    double calculate_area() {
        return width * height;
        
    }
};

class Circle : public Shape {
protected:
    double radius;

public:
    Circle() : radius(0) {}

    void input() {
        cout << "ENTER THE RADIUS: ";
        cin >> radius;
    }

    double calculate_area() {
        return M_PI * radius * radius;
    }
};

int main() {
    Rectangle react;
    react.input();
    cout << "Rectangle Area: " << react.calculate_area() << endl;

    Circle circle;
    circle.input();
    cout << "Circle Area: " << circle.calculate_area() << endl;

    return 0;
}
