#include <iostream>
#include <string>
using namespace std;

class Payment {
public:
    virtual void pay(double amount) = 0;  
 };

class CreditCardPayment : public Payment {
public:
    string cardNumber;
    string cardHolderName;
    CreditCardPayment(const string& cardNum, const string& cardHolder) : cardNumber(cardNum), cardHolderName(cardHolder) {}

    void pay(double amount) override {
        cout << "Paying $" << amount << " using Credit Card.\n";
        cout << "Card Holder: " << cardHolderName << ", Card Number: " << cardNumber << endl;
    }
};

class UpiTransfer : public Payment {
  public :
  string upiId;
  string recieverName;
  
  UpiTransfer(const string& upiId , const)
};

int main (){
    Payment* payment1 = new CreditCardPayment("1234-5678-9876-5432", "John Doe");
    payment1->pay(250.75);
    
    delete payment1;
    return 0;

}
