#include <iostream>
using namespace std;

class Time {
private:
    int hours;
    int minutes;
    int seconds;

public:
    void inputTime() {
        cout << "Enter time:" << endl;
        cout << "Hours: ";
        cin >> hours;
        cout << "Minutes: ";
        cin >> minutes;
        cout << "Seconds: ";
        cin >> seconds;
    }
    
void displayTime() {
        cout << "Entered time: " << hours << " hours, " << minutes << " minutes, " << seconds << " seconds." << endl;
    }
};

int main() {
    Time time;

    
    time.inputTime();

    
    time.displayTime();

    return 0;
}
