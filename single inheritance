#include <iostream>
using namespace std;

class Account {
protected:
    int account_number;
    double balance;
    double amount;

public:
    
    void disp(){
        cout<<"enter the balance : ";
        cin>>balance;
    }
    Account(int acc_num, double bal) : account_number(acc_num), balance(bal) {}

    void display_balance() {
        cout << "Balance: " << balance << endl;
    }
};

class SavingsAccount : public Account {
public:
    SavingsAccount(int acc_num, double bal) : Account(acc_num, bal) {}
    
    void disp1(){
        cout<<"enter the amount you want to add: ";
        cin>>amount;
    }
    
    void deposit() {
        balance += amount;
    }
};

int main() {
    SavingsAccount savings_acc(1234, 0); 
    savings_acc.disp();
    cout << "Initial Balance: ";
    savings_acc.display_balance();
    savings_acc.disp1();
    savings_acc.deposit();
    cout << "After Deposit: ";
    savings_acc.display_balance();

    return 0;
}
